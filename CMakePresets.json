{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28
  },

  "configurePresets": [
    {
      "name": "msvc",
      "displayName": "Visual Studio",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/cmake-build-msvc",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "11"
      }
    },
    {
      "name": "ninja-msvc",
      "displayName": "Ninja Visual Studio",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-ninja-msvc",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_STANDARD": "11",
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "msvc",
      "configurePreset": "msvc"
    },
    {
      "name": "ninja-msvc",
      "configurePreset": "ninja-msvc"
    }
  ]
}
